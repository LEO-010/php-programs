<?php
$ch=$_POST['ch'];
$a=array(10,20,30,40);
switch($ch)
{
    case 1:array_push($a,50);
            print_r($a);
        break;
    case 2:array_pop($a);
            print_r($a);
        break;
    case 3:$arr=print_r($a);
        break;
}
?>

